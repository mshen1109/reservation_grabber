{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "fullstack_demo/backend/Dockerfile"
    },
    "deploy": {
        "startCommand": "docker-compose -f fullstack_demo/docker-compose.yml up",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}